{
	"name": "file-transfer-worker",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/workers/file-transfer-worker/src",
	"projectType": "library",
	"tags": ["frontend"],
	"// targets": "to see all targets run: nx show project file-transfer-worker --web",
	"targets": {
		"prepare": {
			"executor": "nx:run-commands",
			"outputs": ["{projectRoot}/src/hasher"],
			"options": {
				"command": "node -e \"if(!require('fs').existsSync('src/hasher/wasm_source.js')){process.exit(1)}\" || (cd wasm-hasher && wasm-pack build --target web --out-dir ../src/hasher)",
				"cwd": "{projectRoot}"
			}
		},
		"build": {
			"dependsOn": ["prepare"]
		},
		"test": {
			"executor": "nx:noop"
		}
	}
}
