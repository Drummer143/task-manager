{
	"name": "api",
	"$schema": "../../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/frontend/api/src",
	"projectType": "library",
	"tags": ["frontend"],
	"// targets": "to see all targets run: nx show project api --web",
	"targets": {
		"prepare": {
			"executor": "nx:run-commands",
			"// dependsOn": ["main:export-openapi", "storage:export-openapi"],
			"options": {
				"cwd": "libs/frontend/api",
				"command": "npx orval --config ./orval.config.ts"
			}
		},
		"build": {
			"dependsOn": ["prepare"]
		},
		"typecheck": {
			"dependsOn": ["prepare"]
		},
		"lint": {
			"dependsOn": ["prepare"]
		},
		"lint:fix": {
			"executor": "nx:run-commands",
			"dependsOn": ["prepare"],
			"options": {
				"commands": ["eslint --fix {projectRoot}/**/*.{ts,tsx,js,jsx}"]
			}
		}
	}
}
