{
	"compileOnSave": false,
	"compilerOptions": {
		"rootDir": ".",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2015",
		"module": "esnext",
		"lib": ["es2020", "dom"],
		"skipLibCheck": true,
		"skipDefaultLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"@task-manager/ant-config": ["libs/frontend/ant-config/src/index.ts"],
			"@task-manager/api": ["libs/frontend/api/src/index.ts"],
			"@task-manager/react-utils": ["libs/frontend/react-utils/src/index.ts"],
			"@task-manager/tiptap-file-upload-plugin": [
				"libs/frontend/tiptap-file-upload-plugin/src/index.ts"
			],
			"@task-manager/tiptap-plugin-file-renderer": [
				"libs/frontend/tiptap-plugin-file-renderer/src/index.ts"
			],
			"@task-manager/utils": ["libs/frontend/utils/src/index.ts"]
		}
	},
	"exclude": ["node_modules", "tmp"]
}
